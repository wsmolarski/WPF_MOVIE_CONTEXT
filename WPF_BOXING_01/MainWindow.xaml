<Window x:Class="WPF_BOXING_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_BOXING_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="14" Background="#54c">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <Grid Margin="34,10,34,60">
            <Button Command="{Binding DeleteCommand}" Name="btnReserve" Click="btnReserve_Click" Content="Reserve" Margin="204,287,194,-46" Background="#545d6a" Foreground="White" FontSize="18"/>

            <DataGrid x:Name="dataGridView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="30,10,20,117"/>
        </Grid>
        
    </Border>
    


</Window>
